{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format    
    "version": "0.1.0",
    "_tasks": [
        {
            "taskName": "Go build",
            "command": "go",
            "args": ["build"],
            "isShellCommand": true,
            "isBackground": true,
            "isBuildCommand": true,
            "showOutput": "always",
            "problemMatcher": "$go"
        },
        {
            "taskName": "Go metalinter",
            "command": "gometalinter",
            "args": ["./..."],
            "isShellCommand": true,
            "isBackground": true,
            "showOutput": "always",
            "problemMatcher": "$go"
        }
    ]
}